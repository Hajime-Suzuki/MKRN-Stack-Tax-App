    "ts-jest": "^23.1.4",
    "ts-node-dev": "^1.0.0-pre.30",
    "tslint": "^5.11.0"
  },
  "scripts": {
    "dev": "ts-node-dev src/starter.ts",
    "gen:introspection": "apollo schema:download ./schema.json --endpoint=http://localhost:4000/graphql",
    "gen:clean": "rm -f src/GraphQL/@types/types.d.ts",
    "gen:byJson": "gql-gen --schema schema.json --template typescript --out ./src/GraphQL/@types/types.d.ts",
    "gen:types": "yarn gen:clean && yarn gen:introspection && gen:byJson",
    "test-w": "cross-env NODE_ENV=test jest --watch",
    "test": "cross-env NODE_ENV=test jest",
    "test-u": "cross-env NODE_ENV=test jest ./test/user.test.ts",
    "test-e": "cross-env NODE_ENV=test jest ./test/expense.test.ts --watch"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "test/.*.test.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
